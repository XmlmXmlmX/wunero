# Next.js Auth Configuration
NEXTAUTH_SECRET=your-super-secret-key-change-this-in-production
# NEXTAUTH_URL is optional - it will auto-detect from request headers if not set
# Set this explicitly in production or when using Docker/reverse proxies
NEXTAUTH_URL=http://localhost:3000

# Email Service (Resend) - Optional
# Required for email verification and notifications
RESEND_API_KEY=

# OAuth Providers (optional)
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=
FACEBOOK_CLIENT_ID=
FACEBOOK_CLIENT_SECRET=
AZURE_AD_CLIENT_ID=
AZURE_AD_CLIENT_SECRET=
AZURE_AD_TENANT_ID=

# Database Configuration
DB_PATH=./data
NODE_ENV=development

# Legal Features (Cookie Banner, Privacy, Imprint)
# Set to 'true' to enable legal compliance features (required for EU/GDPR)
NEXT_PUBLIC_ENABLE_LEGAL_FEATURES=true

# Imprint / Impressum (required by German law)
NEXT_PUBLIC_IMPRINT_NAME=Max Mustermann
NEXT_PUBLIC_IMPRINT_STREET=Musterstraße 123
NEXT_PUBLIC_IMPRINT_CITY=12345 Musterstadt
NEXT_PUBLIC_IMPRINT_EMAIL=kontakt@example.com
NEXT_PUBLIC_IMPRINT_PHONE=+49 123 456789

# Amazon PartnerNet (Affiliate) - Optional
# Use region-specific tags. Example for Germany (DE): yourtag-21
NEXT_PUBLIC_AMAZON_PARTNER_TAG_DE=
NEXT_PUBLIC_AMAZON_PARTNER_TAG_US=
NEXT_PUBLIC_AMAZON_PARTNER_TAG_UK=
NEXT_PUBLIC_AMAZON_PARTNER_TAG_FR=
NEXT_PUBLIC_AMAZON_PARTNER_TAG_IT=
NEXT_PUBLIC_AMAZON_PARTNER_TAG_ES=
NEXT_PUBLIC_AMAZON_PARTNER_TAG_NL=
NEXT_PUBLIC_AMAZON_PARTNER_TAG_SE=
NEXT_PUBLIC_AMAZON_PARTNER_TAG_PL=

# Neon Postgres (optional - enables Postgres instead of SQLite)
# Get from: Neon Console → Connection String → choose "Pooled connection"
# Or migrate from Vercel: https://neon.com/docs/guides/vercel-postgres-transition-guide
# POSTGRES_URL=postgres://user:pass@host/dbname
